@using Ticket.Models
@model List<ClienteCLS>
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">

        <div class="text-center" style="margin:30px;">
            <h2>Listado de Personas</h2>    @*Este proces se utilizar para crear tablas y mostrar los resultados*@
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Codigo </th>
                    <th>Nombres </th>
                    <th>Apellidos </th>
                    <th>Numero de Identificacion </th>
                    <th>Numero Telefonico</th>
                    <th>Genero</th>
                    <th>Tipo de Problema</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Id</td>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Apellido</td>
                        <td>@cliente.Dpi</td>
                        <td>@cliente.Telefono</td>
                        <td>@cliente.NombreGenero</td>
                        <td>@cliente.TipoProblema</td>
                        <td>
                            <button class="border-0 bg-transparent ms-3 text-danger" data-bs-toggle="modal" data-bs-target="#ClienteModal-@cliente.Id">Visualizar</button>
                            @Html.Partial("_ModalPartialView", cliente)
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
