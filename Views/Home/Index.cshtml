@{
    ViewBag.Title = "Pantalla de Tickets de Espera";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pantalla de Tickets de Espera - Tu Conexión Chilera</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f2f2f2;
        }

        .jumbotron {
            background-color: #00aaff;
            color: #fff;
            padding: 30px;
            border-radius: 10px;
            margin: 30px auto;
            width: 90%;
            text-align: center;
        }

        .container1 {
            background-color: #fff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
            width: 90%;
            margin: 30px auto;
        }

        .ticket {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .ticket-number {
            font-size: 1.5rem;
            color: #00aaff;
        }

        .ticket-info {
            font-size: 1.2rem;
        }

        .ticket-action {
            margin-top: 10px;
        }

        .btn-primary {
            background-color: #00aaff;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="jumbotron">
        <h1 class="display-4">Pantalla de Tickets de Espera</h1>
        <p class="lead">Bienvenido a la cola de espera</p>
    </div>

    <div class="container1">
        <div class="ticket">
            <div class="ticket-number">Ticket #1</div>
            <div class="ticket-info">Cliente: Juan Pérez</div>
            <div class="ticket-info">Servicio: Soporte Técnico</div>
            <div class="ticket-action">
                <a href="#" class="btn btn-primary">Llamar al Cliente</a>
            </div>
        </div>

        <div class="ticket">
            <div class="ticket-number">Ticket #2</div>
            <div class="ticket-info">Cliente: María Rodríguez</div>
            <div class="ticket-info">Servicio: Ventas</div>
            <div class="ticket-action">
                <a href="#" class="btn btn-primary">Llamar al Cliente</a>
            </div>
        </div>

        <!-- Puedes agregar más tickets aquí -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
