@{
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Tu Conexión Chilera</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f2f2f2;
            color: #333;
        }

        .jumbotron {
            background-color: #00aaff;
            color: #fff;
            padding: 4rem;
            border-radius: 30px;
            margin-top: 50px;
        }

        .dashboard-item {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            margin: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }

        .dashboard-title {
            font-size: 1.5rem;
        }

        .dashboard-number {
            font-size: 2.5rem;
            color: #00aaff;
        }
    </style>
</head>
<body>
    <div class="jumbotron text-center py-5">
        <h1 class="display-4">Dashboard - Tu Conexión Chilera</h1>
        <p class="lead">Bienvenido al panel de control</p>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="dashboard-item">
                    <h2 class="dashboard-title">Numero de Tickets</h2>
                    <p class="dashboard-number">3</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="dashboard-item">
                    <h2 class="dashboard-title">Personas Registradas</h2>
                    <p class="dashboard-number">@ViewBag.NumeroPersonasRegistradas</p>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
