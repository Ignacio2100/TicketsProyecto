@model Ticket.Models.LoginModel

@{
    ViewBag.Title = "Iniciar sesión";
}


<div class="container mt-5">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Iniciar Sesión</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="mb-3 mx-auto" style="max-width: 300px;">
                            @Html.LabelFor(model => model.Correo, "Correo electrónico", htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })

                        </div>
                        <div class="mb-3 mx-auto" style="max-width: 300px;">
                            @Html.LabelFor(model => model.Contraseña, "Contraseña", htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })

                            <div class="invalid-feedback">Por favor, ingrese una contraseña válida.</div>
                        </div>
                        <div class="mb-3 text-center">
                            <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js" integrity="sha384-woaJ8Txv4w6GQZk5lHZbF5f5Tbmi5btk5sPTUuUibX39rFE5zj5FCf9F5t5F5H5D" crossorigin="anonymous"></script>
