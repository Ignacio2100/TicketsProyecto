@model IEnumerable<Ticket.Models.Ticket>

<div class="row p-3">
    <div class="col-3">
        <div id="TicketsEnEsperaContainer">
            @Html.Partial("_TicketsEnEsperaPartialView", Model.Where(t => t.Nota == null))
        </div>
    </div>
    <div class="col-6" id="TicketActual">
        <div class="card">
            <div class="card-header">
                Ticket
            </div>
            <div class="card-body">
                <h5 class="card-title">Ticket #@Model.First().Id en espera</h5>
                @Html.ActionLink($"Aceptar", "AtenderTicket", "PanelDeControl", new { id = Model.First().Id }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="col-3" id="TicketsAtendidosContainer">
        @Html.Partial("_TicketsAtendidosPartialView", Model.Where(t => t.Nota != null))
    </div>
</div>

