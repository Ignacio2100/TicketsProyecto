@model Ticket.Models.Ticket

<style>
    /* Estilos personalizados */
    .card {
        background-color: #f7f7f7;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        margin: 0 auto;
        text-align: center;
        padding: 20px;
    }

    .card-title {
        font-size: 30px;
        margin-bottom: 20px;
        color: #007bff;
    }
    .parrafo{
        font-size: 20px;
    }

    .card-message {
        font-size: 20px;
        margin-bottom: 30px;
    }

    .btn-group {
        display: flex;
        justify-content: center;
    }

    .btn {
        margin: 0 10px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-secondary {
        background-color: #ccc;
        color: #000;
        border: none;
    }
</style>

<div class="container">
    <div class="card">
        <h4 class="card-title">Fast Internet</h4>
        <p class="card-message">@Model.Cliente.Nombre @Model.Cliente.Apellido, tu solicitud fue realizada con éxito.</p>
        <p class="parrafo"> ¿Deseas imprimir tu comprobante?</p>
        <div class="btn-group">
            <a href="@Url.Action("Buscar")" class="btn btn-primary">Sí</a>
            <a href="@Url.Action("Buscar")" class="btn btn-secondary">No</a>
        </div>
    </div>
</div>