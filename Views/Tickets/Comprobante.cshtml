@model Ticket.Models.Ticket

<style>
    /* Estilos personalizados */
    .container-fluid {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 60vh;
    }

    .card {
        background-color: #f7f7f7;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
        padding: 20px;
    }

    .card-title {
        font-size: 24px;
        margin-bottom: 20px;
        color: #007bff;
    }

    .card-message {
        font-size: 20px;
        margin-bottom: 30px;
    }

    .btn-group {
        display: flex;
        justify-content: center;
    }

    .btn {
        margin: 0 10px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-secondary {
        background-color: #ccc;
        color: #000;
        border: none;
    }
</style>

<div class="container-fluid">
    <div class="card">
        <h5 class="card-title">Fast Internet</h5>
        <p class="card-message">@Model.Cliente.Nombre @Model.Cliente.Apellido, tu solicitud fue realizada con éxito. ¿Deseas imprimir tu comprobante?</p>
        <div class="btn-group">
            <a href="@Url.Action("Buscar")" class="btn btn-primary">Sí</a>
            <a href="@Url.Action("Buscar")" class="btn btn-secondary">No</a>
        </div>
    </div>
</div>